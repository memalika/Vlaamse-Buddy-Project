:root {
    --bg-color: #0f172a;
    --card-bg: #1e293b;
    --primary: #fb923c;
    /* Brighter Dutch Orange */
    --primary-dark: #ea580c;
    --primary-glow: rgba(251, 146, 60, 0.4);
    --text-primary: #f8fafc;
    --text-secondary: #94a3b8;
    --user-msg-bg: #334155;
    --bot-msg-bg: #fb923c;
    --bot-msg-text: #ffffff;
    --accent-blue: #38bdf8;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Outfit', sans-serif;
    background: radial-gradient(circle at top right, #1e293b, var(--bg-color));
    color: var(--text-primary);
    height: 100vh;
    display: flex;
    justify-content: center;
    overflow: hidden;
}

body {
    font-family: 'Outfit', sans-serif;
    background: radial-gradient(circle at top right, #1e293b, var(--bg-color));
    color: var(--text-primary);
    height: 100vh;
    display: flex;
    justify-content: center;
    overflow: hidden;
}

.main-layout {
    display: flex;
    width: 100%;
    max-width: 1000px;
    height: 100%;
    background: var(--bg-color);
    box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
}

.sidebar {
    width: 260px;
    background: rgba(15, 23, 42, 0.95);
    border-right: 1px solid rgba(255, 255, 255, 0.05);
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    backdrop-filter: blur(10px);
}

.sidebar h2 {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 10px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.scenario-btn {
    padding: 12px 16px;
    border-radius: 12px;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    text-align: left;
    cursor: pointer;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    gap: 10px;
}

.scenario-btn:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
}

.scenario-btn.active {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    border-color: transparent;
    color: white;
    font-weight: 600;
    box-shadow: 0 4px 12px var(--primary-glow);
}

.app-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
}

header {
    padding: 24px;
    text-align: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: rgba(15, 23, 42, 0.6);
    backdrop-filter: blur(16px);
    z-index: 10;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
}

header h1 {
    font-size: 2.2rem;
    font-weight: 700;
    letter-spacing: -1px;
    background: linear-gradient(to right, #fff, #cbd5e1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    display: inline-block;
}

.highlight {
    background: linear-gradient(135deg, var(--primary), #ef4444);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 800;
}

header p {
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin-top: 8px;
    font-weight: 300;
    letter-spacing: 0.5px;
}

#chat-container {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    scroll-behavior: smooth;
}

.message {
    display: flex;
    flex-direction: column;
    max-width: 85%;
    animation: fadeIn 0.3s ease-out;
}

.message.user {
    align-self: flex-end;
    align-items: flex-end;
}

.message.bot {
    align-self: flex-start;
    align-items: flex-start;
}

.bubble {
    padding: 14px 20px;
    border-radius: 20px;
    font-size: 1.05rem;
    line-height: 1.6;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    position: relative;
    max-width: 100%;
}

.message.user .bubble {
    background: linear-gradient(135deg, #334155, #475569);
    color: var(--text-primary);
    border-bottom-right-radius: 4px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.message.bot .bubble {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    color: var(--bot-msg-text);
    border-bottom-left-radius: 4px;
    box-shadow: 0 5px 15px rgba(249, 115, 22, 0.3);
}

.feedback-box {
    margin-top: 12px;
    background: rgba(30, 41, 59, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    padding: 16px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    backdrop-filter: blur(4px);
    animation: slideIn 0.4s ease-out;
}

@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.correction {
    color: #4ade80;
    /* Green for correction */
    margin-bottom: 4px;
    font-weight: 500;
}

.controls {
    padding: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    background: rgba(15, 23, 42, 0.8);
    backdrop-filter: blur(16px);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.mic-btn {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: none;
    background: linear-gradient(135deg, #1e293b, #0f172a);
    color: var(--text-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3), inset 0 2px 4px rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.mic-btn:hover {
    transform: scale(1.1) translateY(-2px);
    background: linear-gradient(135deg, #334155, #1e293b);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4), inset 0 2px 4px rgba(255, 255, 255, 0.1);
}

.mic-btn.listening {
    background: linear-gradient(135deg, var(--primary), var(--primary-dark));
    color: white;
    animation: pulse 2s infinite;
    box-shadow: 0 0 30px var(--primary-glow);
    border: none;
}

@keyframes pulse {
    0% {
        box-shadow: 0 0 0 0 rgba(251, 146, 60, 0.7);
    }

    70% {
        box-shadow: 0 0 0 25px rgba(251, 146, 60, 0);
    }

    100% {
        box-shadow: 0 0 0 0 rgba(251, 146, 60, 0);
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

#status {
    font-size: 0.8rem;
    color: var(--text-secondary);
    height: 1.2em;
}

/* Scrollbar */
::-webkit-scrollbar {
    width: 6px;
}

::-webkit-scrollbar-track {
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
}